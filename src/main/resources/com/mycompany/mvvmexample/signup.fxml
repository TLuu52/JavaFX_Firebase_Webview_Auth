<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="modelview.signUp">
   <center>
      <VBox alignment="CENTER" maxWidth="-Infinity" prefWidth="250.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="User Sign Up" underline="true">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Text>
            <TextField fx:id="nameTextField" promptText="Name" />
            <TextField fx:id="emailTextfield" promptText="Email" />
            <TextField fx:id="userTextField" promptText="Username" />
            <TextField fx:id="phoneTextField" promptText="Phone" />
            <PasswordField fx:id="pass1TextField" promptText="Password" />
            <PasswordField fx:id="Pass2TextField" promptText="Confirm Password" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#signUpButton" text="SignUp" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <AnchorPane prefHeight="40.0" prefWidth="400.0" style="-fx-background-color: blue;" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
